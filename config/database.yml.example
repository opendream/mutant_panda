# Example database configuration for panda

:development: &defaults
  :adapter: sqlite3
  :database: db/development.db 

:production: &prod
  :adapter: mysql
  :database: panda_production
  :username: panda
  :password: panda-password
  :host: localhost
  :encoding: utf8
  :socket: /var/run/mysqld/mysqld.sock

:test:
  <<: *prod
  :database: panda_test

:rake:
  <<: *defaults

